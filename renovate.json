{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^values\\.yaml$",
        "^charts/.*/values\\.yaml$",
        "^charts/.*/ci/.*values\\.yaml$"
      ],
      "matchStrings": [
        "# renovate: datasource=helm depName=(?<depName>[^\\s]+) registryUrl=(?<registryUrl>[^\\s]+)\\n[^:]+:\\n[^:]*targetRevision:\\s*(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "helm"
      ],
      "ignoreUnstable": true,
      "stabilityDays": 7
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchFileNames": [
        "charts/**/values.yaml",
        "charts/**/ci/**values.yaml"
      ],
      "matchDatasources": [
        "helm"
      ],
      "groupName": "helm-charts",
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}

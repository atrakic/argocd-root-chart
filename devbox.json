{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "kubectl@latest",
    "kind@latest",
    "kubernetes-helm@latest",
    "python@latest",
    "chart-testing@latest"
  ],
  "env": {
    "KUBECONFIG": "$PWD/home/.kube/config"
  },
  "shell": {
    "init_hook": [
      "helm repo add my-repo https://atrakic.github.io/argocd-bootstrap"
    ],
    "scripts": {
      "kind": [
        "finish() { kind delete cluster; }",
        "trap finish SIGTERM SIGINT EXIT",
        "kind create cluster"
      ]
    }
  }
}
